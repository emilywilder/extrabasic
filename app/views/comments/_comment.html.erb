<div class="card">
  <div class="card-body">
    <h4 class="card-title">
      <%= comment.commenter %>
    </h4>
    <div class="card-text">
      <%= comment.body %>
    </div>
    <p>
      <%= link_to 'Destroy Comment', [comment.article, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
</div>
